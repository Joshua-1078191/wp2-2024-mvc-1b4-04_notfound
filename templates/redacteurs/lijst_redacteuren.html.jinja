{% extends "layout.html.jinja" %}
{% block title %}Gegevens redacteur wijzigen{% endblock %}
{% block content %}

<div class="container">
    <div class="position-relative">
        <div class="position-absolute top-0 start-0"></div>
        <h2>Redacteuren</h2>
    </div>
    <table class="table table-hover table-bordered table-striped" style="width:80%">
        <thead>
        <tr>
            <th class="col">Redacteuren</th>
            <th scope="col">Loginnaam</th>
            <th scope="col">Admin</th>
            <th scope="col">Acties</th>
        </tr>
        </thead>
        <tbody>
        {% for editor in editors %}
        <tr>
            <td scope="row">{{editor.name}}</td>
            <td>{{editor.email}}</td>
            <td>
                <div class="form-check form-switch">
                    <input type="checkbox" {% if editor.isAdmin %} checked {% endif %} disabled
                           id="flexSwitchCheckDefault">
                </div>
            </td>
            <td><a href="redacteur_wijzigen/{{editor.id}}" class="btn btn-primary">wijzig</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="button-container">
        <a href="redacteur_wijzigen"> <!--hier moet nog komen de inloggegevens van de gebruiker-->
            <button class="btn btn-primary me-md-2" type="button">Wijzig eigen gegevens</button>
        </a>
        <a href="nieuwe_redacteur">
            <button class="btn btn-primary" type="button">Nieuwe redacteur</button>
        </a>
    </div>
</div>

{% endblock %}