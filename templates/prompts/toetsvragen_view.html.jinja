{% extends "layout.html.jinja" %}
{% block title %}Toetsvragen{% endblock %}
{% block content %}
<div class="container">
    <div class="row pb-3">
        <div class="col-auto">
            <h1>Lijst van alle vragen</h1>
        </div>
        <div class="col d-flex flex-row justify-content-end gap-2">
            <a href="{{ url_for('import_questions') }}" class="btn btn-primary d-flex align-items-center">
                <i class="fa fa-plus"></i> Vragen Importeren
            </a>
            <a href="{{ url_for('add_question') }}" class="btn btn-primary d-flex align-items-center">
                <i class="fa fa-plus"></i> Nieuwe Vraag
            </a>
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle h-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-plus"></i> Vragen Exporteren
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="{{ url_for('export_questions')}}">Exporteer Vragen</a></li>
                    <li><a class="dropdown-item" href="{{ url_for('export_questions', all=True) }}">Exporteer Alle Vragen</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        {% include 'handle_flashes.html.jinja' %}
        <div class="table-responsive">
            <form method="POST" action="{{ url_for('toetsvragen_view') }}">
                <form id="filter_form" method="POST" action="{{ url_for('toetsvragen_view') }}">
                <button type="submit" id="filter_form" class="btn btn-primary">Filters toepassen</button>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th scope="col">
                                Vraag
                                <label for="question_filter" class="form-label"></label>
                                <input type="text" class="form-control" id="question_filter" name="question_filter">
                            </th>
                            <th scope="col">
                                Vak
                                <label for="subject_filter" class="form-label"></label>
                                <input type="text" class="form-control" id="subject_filter" name="subject_filter">
                            </th>
                            <th scope="col">
                                Niveau + Jaar
                                <label for="school_grade_filter" class="form-label"></label>
                                <input type="text" class="form-control" id="school_grade_filter" name="school_grade_filter">
                            </th>
                            <th scope="col">Prompt</th>
                            <th scope="col">Antwoord</th>
                            <th scope="col">Taxonomie</th>
                            <th scope="col">Acties</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        {% if questions %}
                            {% for question in questions %}
                                <tr>
                                    <td>{{ question.question }}</td>
                                    <td>{{ question.subject }}</td>
                                    <td>{{ question.grade }}</td>
                                    <td>{{ question.education }}</td>
                                    <td>{{ question.prompt_name }}</td>
                                    <td>{{ question.answer }}</td>
                                    <td>{% if question["taxonomy_id"] %} {{ taxonomies[question.taxonomy_id] }} {% else %} <a href="{{ url_for('index_questions_prompt', question_id=question.id) }}" class="btn btn-primary">Index</a> {% endif %}</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ url_for('edit_question', question_id=question.id) }}" class="btn btn-sm btn-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form action="{{ url_for('delete_question', question_id=question.id) }}" method="POST" class="d-inline" id="submit-delete">
                                                <button id="submit_delete" type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Weet je zeker dat je deze vraag wilt verwijderen?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center">Geen vragen gevonden</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
                </form>
            </form>
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col">Vraag</th>
                        <th scope="col">Vak</th>
                        <th scope="col">Klas</th>
                        <th scope="col">Niveau</th>
                        <th scope="col">Prompt</th>
                        <th scope="col">Antwoord</th>
                        <th scope="col">Taxonomie</th>
                        <th scope="col">Acties</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    {% if questions %}
                        {% for question in questions %}
                            <tr>
                                <td>{{ question.question }}</td>
                                <td>{{ question.subject }}</td>
                                <td>{{ question.grade }}</td>
                                <td>{{ question.education }}</td>
                                <td>{{ question.prompt_name }}</td>
                                <td>{{ question.answer }}</td>
                                <td>{% if question["taxonomy_id"] %} {{ taxonomies[question.taxonomy_id] }} {% else %} <a href="{{ url_for('index_questions_prompt', question_id=question.id) }}" class="btn btn-primary">Index</a> {% endif %}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ url_for('edit_question', question_id=question.id) }}" class="btn btn-sm btn-primary">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <form action="{{ url_for('delete_question', question_id=question.id) }}" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Weet je zeker dat je deze vraag wilt verwijderen?')">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center">Geen vragen gevonden</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col d-flex justify-content-between">
            <form method="get" action="">
                <label for="per_page">Questions per page:</label>
                <select name="per_page" id="per_page" onchange="this.form.submit()">
                    <option value="10" {% if per_page == 10 %}selected{% endif %}>10</option>
                    <option value="25" {% if per_page == 25 %}selected{% endif %}>25</option>
                    <option value="100" {% if per_page == 100 %}selected{% endif %}>100</option>
                </select>
            </form>
            <div>
                <a href="?page={{ page - 1 }}&per_page={{ per_page }}" class="btn btn-secondary {% if page <= 1 %}disabled{% endif %}">Back</a>
                <a href="?page={{ page + 1 }}&per_page={{ per_page }}" class="btn btn-secondary">Next</a>
            </div>
            <form method="POST" action="{{ url_for('toetsvragen_view') }}">
                <form id="filter_form" method="POST" action="{{ url_for('toetsvragen_view') }}">
                <button type="submit" id="filter_form" class="btn btn-primary">Filters toepassen</button>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th scope="col">
                                Vraag
                                <label for="question_filter" class="form-label"></label>
                                <input type="text" class="form-control" id="question_filter" name="question_filter">
                            </th>
                            <th scope="col">
                                Vak
                                <label for="subject_filter" class="form-label"></label>
                                <input type="text" class="form-control" id="subject_filter" name="subject_filter">
                            </th>
                            <th scope="col">
                                Niveau + Jaar
                                <label for="school_grade_filter" class="form-label"></label>
                                <input type="text" class="form-control" id="school_grade_filter" name="school_grade_filter">
                            </th>
                            <th scope="col">Prompt</th>
                            <th scope="col">Antwoord</th>
                            <th scope="col">Taxonomie</th>
                            <th scope="col">Acties</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        {% if questions %}
                            {% for question in questions %}
                                <tr>
                                    <td>{{ question.question }}</td>
                                    <td>{{ question.subject }}</td>
                                    <td>{{ question.grade }}</td>
                                    <td>{{ question.education }}</td>
                                    <td>{{ question.prompt_name }}</td>
                                    <td>{{ question.answer }}</td>
                                    <td>{% if question["taxonomy_id"] %} {{ taxonomies[question.taxonomy_id] }} {% else %} <a href="{{ url_for('index_questions_prompt', question_id=question.id) }}" class="btn btn-primary">Index</a> {% endif %}</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ url_for('edit_question', question_id=question.id) }}" class="btn btn-sm btn-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form action="{{ url_for('delete_question', question_id=question.id) }}" method="POST" class="d-inline" id="submit-delete">
                                                <button id="submit_delete" type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Weet je zeker dat je deze vraag wilt verwijderen?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center">Geen vragen gevonden</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
                </form>
            </form>
        </div>
    </div>
</div>
{% endblock %}
