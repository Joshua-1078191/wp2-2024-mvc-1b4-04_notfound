{% extends "layout.html.jinja" %}
{% block title %}Toetsvragen{% endblock %}
{% block content %}
<div class="container">
    <div class="row pb-3">
        <div class="col">
            <h1>Lijst van alle vragen</h1>
        </div>
        <div class="col text-end">
            <a href="{{ url_for('import_questions') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Vragen Importeren
            </a>
            <a href="{{ url_for('add_question') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nieuwe Vraag
            </a>
        </div>
    </div>
    <div class="row">
        {% include 'handle_flashes.html.jinja' %}
        <div class="table-responsive">
            <form method="POST" action="{{ url_for('toetsvragen_view') }}">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th scope="col">
                                Vraag
                                <label for="question_filter" class="form-label"></label>
                                <input type="text" class="form-control" id="question_filter" name="question_filter">
                            </th>
                            <th scope="col">
                                Vak
                                <label for="subject_filter" class="form-label"></label>
                                <input type="text" class="form-control" id="subject_filter" name="subject_filter">
                            </th>
                            <th scope="col">
                                Niveau + Jaar
                                <label for="school_grade_filter" class="form-label"></label>
                                <input type="text" class="form-control" id="school_grade_filter" name="school_grade_filter">
                            </th>
                            <th scope="col">Prompt</th>
                            <th scope="col">Antwoord</th>
                            <th scope="col">Taxonomie</th>
                            <th scope="col">Acties</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        {% if questions %}
                            {% for question in questions %}
                                <tr>
                                    <td>{{ question.question }}</td>
                                    <td>{{ question.subject }}</td>
                                    <td>{{ question.grade }}</td>
                                    <td>{{ question.education }}</td>
                                    <td>{{ question.prompt_name }}</td>
                                    <td>{{ question.answer }}</td>
                                    <td>{% if question["taxonomy_id"] %} {{ taxonomies[question.taxonomy_id] }} {% else %} <a href="{{ url_for('index_questions_prompt', question_id=question.id) }}" class="btn btn-primary">Index</a> {% endif %}</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ url_for('edit_question', question_id=question.id) }}" class="btn btn-sm btn-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form action="{{ url_for('delete_question', question_id=question.id) }}" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Weet je zeker dat je deze vraag wilt verwijderen?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center">Geen vragen gevonden</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>
{% endblock %}