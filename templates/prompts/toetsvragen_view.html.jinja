{% extends "layout.html.jinja" %}
{% block title %}Toetsvragen{% endblock %}
{% block content %}
<div class="container">
    <div class="row pb-3">
        <div class="col">
            <h1>Lijst van alle vragen</h1>
        </div>
        <div class="col text-end">
            <a href="{{ url_for('add_question') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nieuwe Vraag
            </a>
        </div>
    </div>
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col">Vraag</th>
                        <th scope="col">Vak</th>
                        <th scope="col">Klas</th>
                        <th scope="col">Niveau</th>
                        <th scope="col">Prompt</th>
                        <th scope="col">Antwoord</th>
                        <th scope="col">Taxonomie</th>
                        <th scope="col">Acties</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    {% if questions %}
                        {% for question in questions %}
                            <tr>
                                <td>{{ question["question"] }}</td>
                                <td>{{ question["subject"] }}</td>
                                <td>{{ question["grade"] }}</td>
                                <td>{{ question["education"] }}</td>
                                <td>{{ question["prompts_id"] }}</td>
                                <td>{{ question["answer"] }}</td>
                                <td>{% if question["taxonomy_id"] %} {{ taxonomies[question["taxonomy_id"]] }} {% else %} <a href="{{ url_for('index_questions_prompt', question_id=question["questions_id"]) }}" class="btn btn-primary">Index</a> {% endif %}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ url_for('edit_question', question_id= 0) }}" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="{{ url_for('delete_question', question_id= 0) }}" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Weet je zeker dat je deze vraag wilt verwijderen?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="9" class="text-center">Geen vragen gevonden.</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}