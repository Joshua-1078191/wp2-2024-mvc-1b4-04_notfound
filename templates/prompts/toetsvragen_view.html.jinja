{% extends "layout.html.jinja" %}
{% block title %}Toetsvragen{% endblock %}
{% block content %}
<div class="container">
    <div class="row pb-3">
        <div class="col">
            <h1>Lijst van alle vragen</h1>
        </div>
        <div class="col text-end">
            <a href="{{ url_for('add_question') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nieuwe Vraag
            </a>
        </div>
    </div>

    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped table-hover border border-black border-1">
                <thead>
                    <tr>
                        <th scope="col" class="border-start border-black border-1">Nr.</th>
                        <th scope="col" class="border-start border-black border-1">Vraag</th>
                        <th scope="col" class="border-start border-black border-1">Vak</th>
                        <th scope="col" class="border-start border-black border-1">Klas</th>
                        <th scope="col" class="border-start border-black border-1">Niveau</th>
                        <th scope="col" class="border-start border-black border-1">Prompt</th>
                        <th scope="col" class="border-start border-black border-1">Antwoord</th>
                        <th scope="col" class="border-start border-black border-1">Taxonomie</th>
                        <th scope="col" class="border-start border-black border-1">Acties</th>
                    </tr>
                </thead>
                <tbody>
                    {% if questions %}
                        {% for question in questions %}
                            <tr>
                                <td class="border-start border-black border-1">{{ question[0] }}</td>
                                <td class="border-start border-black border-1">{{ question[1] }}</td>
                                <td class="border-start border-black border-1">{{ question[2] }}</td>
                                <td class="border-start border-black border-1">{{ question[3] }}</td>
                                <td class="border-start border-black border-1">{{ question[4] }}</td>
                                <td class="border-start border-black border-1">{{ question[5] }}</td>
                                <td class="border-start border-black border-1">{{ question[6] }}</td>
                                <td class="border-start border-black border-1">{{ question[7] }}</td>
                                <td class="border-start border-black border-1">
                                    <div class="btn-group" role="group">
                                        <a href="{{ url_for('edit_question', question_id= 0) }}" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="{{ url_for('delete_question', question_id= 0) }}" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Weet je zeker dat je deze vraag wilt verwijderen?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="9" class="text-center">Geen vragen gevonden.</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}