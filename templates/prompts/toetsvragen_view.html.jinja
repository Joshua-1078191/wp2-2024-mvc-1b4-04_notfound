{% extends "layout.html.jinja" %}
{% block title %} toetsvragen view {% endblock %}
{% block content %}
    <div class="container">
        <div class="row pb-3 d-flex justify-content-between align-items-center">
            <div class="col">
                <h1>Lijst van alle vragen</h1>
            </div>
            <div class="col-auto">
                <a href="{{ url_for('add_question') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nieuwe vraag toevoegen
                </a>
            </div>
        </div>
        <div class="row pb-3">
            <form method="GET" action="{{ url_for('toetsvragen_view') }}" class="row g-3">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="filter-zoekwoord" class="form-label">Zoekwoord</label>
                        <input type="text" name="zoekwoord" id="filter-zoekwoord" value="{{ request.args.get('zoekwoord', '') }}" 
                               class="form-control" placeholder="Zoek in vragen..." autocomplete="off">
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Zoeken</button>
                    <a href="{{ url_for('toetsvragen_view') }}" class="btn btn-secondary">Reset</a>
                </div>
            </form>
        </div>
        <div class="row">
            <div class="table-responsive">
                <table class="table table-striped table-hover border border-black border-1">
                    <thead>
                        <tr>
                            <th scope="col" class="border-start border-black border-1">nr.</th>
                            <th scope="col" class="border-start border-black border-1">Vraag</th>
                            <th scope="col" class="border-start border-black border-1">Van</th>
                            <th scope="col" class="border-start border-black border-1">Prompt</th>
                            <th scope="col" class="border-start border-black border-1">Bloom</th>
                            <th scope="col" class="border-start border-black border-1">RTTI</th>
                            <th scope="col" class="border-start border-black border-1">Invoerdatum</th>
                            <th scope="col" class="border-start border-black border-1">Acties</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if questions %}
                            {% for question in questions %}
                                <tr>
                                    <td class="border-start border-black border-1">{{ question.questions_id }}</td>
                                    <td class="border-start border-black border-1">{{ question.question }}</td>
                                    <td class="border-start border-black border-1">{{ question.display_name }}</td>
                                    <td class="border-start border-black border-1">{{ question.prompt }}</td>
                                    <td class="border-start border-black border-1">{{ question.taxonomy_bloom }}</td>
                                    <td class="border-start border-black border-1">{{ question.rtti }}</td>
                                    <td class="border-start border-black border-1">
                                        <time datetime="{{ question.date_created }}">{{ question.date_created.strftime('%d-%m-%Y') if question.date_created else 'No date' }}</time>
                                    </td>
                                    <td class="border-start border-black border-1">
                                        <a href="{{ url_for('edit_question', question_id=question.questions_id) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center">Geen vragen gevonden.</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}