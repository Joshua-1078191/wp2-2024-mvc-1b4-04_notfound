{% extends "layout.html.jinja" %}
{% block title %} prompt details {% endblock %}
{% block content %}
    <div class="container">
        <div class="d-flex justify-content-start">
            <div class="row">
                <div class="col">
                    <div class="row">
                        <h1>Prompt details</h1>
                    </div>
                    <div class="row">
                        <h2>{{ prompt.name }}</h2>
                    </div>

                    <!-- The div under this comment needs to be replaced with a jinja variable-->

                    <div class="row">
                        <p>{{ prompt.prompt }}<br>
                            <br>
                            Kun je het antwoord geven in een RFC8259JSON met de volgende opmaak:
                        </p>

                        <code>
                            {<br>
                            &emsp;"categorie":"Categorie",<br>
                            &emsp;"uitleg":"Uitleg"<br>
                            }
                        </code>
                    </div>

                    <div class="row">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th scope="row" class="col-3">ID:</th>
                                    <td>{{ prompt.id }}</td>
                                </tr>
                                <tr>
                                    <th scope="row" class="col-3">Redacteur:</th>
                                    <td>{{ prompt.user_name }}</td>
                                </tr>
                                <!-- Date_created moet worden gefixet. Geeft de verkeerde tijd weer (tijd - één uur) -->
                                <tr>
                                    <th scope="row" class="col-3">Aangemaakt:</th>
                                    <td><time datetime="{{ prompt.date_created }}">{{ prompt.date_created }}</time></td>
                                </tr>
                                <tr>
                                    <th scope="row" class="col-3">Toetsvragen gecategoriseerd:</th>
                                    <td>{{ prompt.questions_count }}</td>
                                </tr>
                                <tr>
                                    <th scope="row" class="col-3">Toetsvragen correct:</th>
                                    <td>{{ prompt.questions_correct }}</td>
                                </tr>
                                <tr>
                                    <th scope="row" class="col-3">Toetsvragen incorrect</th>
                                    <td>{{ prompt.questions_count - prompt.questions_correct }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
            </div>
            </div>
        </div>
    </div>
{% endblock %}