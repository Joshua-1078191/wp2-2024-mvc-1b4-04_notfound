{% extends "layout.html.jinja" %}
{% block title %}Prompts{% endblock %}
{% block content %}
<div class="container">
    <div class="row pb-3">
        <div class="col">
            <h1>Lijst van alle prompts</h1>
        </div>
        <div class="col text-end">
            <a href="{{ url_for('add_prompt') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nieuwe Prompt
            </a>
        </div>
    </div>

    <div class="row">
        {% include 'handle_flashes.html.jinja' %}
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Nr.</th>
                        <th scope="col">Naam</th>
                        <th scope="col">Prompt</th>
                        <th scope="col">Redacteur</th>
                        <th scope="col">Aantal Vragen</th>
                        <th scope="col">Correct</th>
                        <th scope="col">Datum</th>
                        <th scope="col">Acties</th>
                    </tr>
                </thead>
                <tbody>
                    {% if prompts %}
                        {% for prompt in prompts %}
                            <tr>
                                <td>{{ prompt.id }}</td>
                                <td>{{ prompt.name }}</td>
                                <td>{{ prompt.prompt }}</td>
                                <td>{{ prompt.user_name }}</td>
                                <td>{{ prompt.questions_count }}</td>
                                <td>{{ prompt.questions_correct }}</td>
                                <td>{{ prompt.date_created }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ url_for('edit_prompt', prompt_id=prompt.id) }}" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="{{ url_for('delete_prompt', prompt_id=prompt.id) }}" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Weet je zeker dat je deze prompt wilt verwijderen?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center">Geen prompts gevonden</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
            <div class="row">
                <a href="{{ url_for('add_prompt') }}"><button type="button" class="btn btn-light btn-primary" >Nieuw prompt toevoegen</button></a>
            </div>
        </div>
    </div>
{% endblock %}