{% extends "layout.html.jinja" %}
{% block title %} prompts view {% endblock %}
{% block content %}
    <div class="container">
        <div class="row pb-2">
            <h1>AI prompts</h1>
        </div>
        <div class="row">
            <table class="table table-striped table-hover border border-black border-1">
                <thead>
                    <tr>
                        <th scope="col" class="border-start border-black border-1">nr.</th>
                        <th scope="col" class="border-start border-black border-1">Prompt</th>
                        <th scope="col" class="border-start border-black border-1">Redacteur</th>
                        <th scope="col" class="border-start border-black border-1">Toetsvragen</th>
                        <th scope="col" class="border-start border-black border-1">Correct</th>
                        <th scope="col" class="border-start border-black border-1">Acties</th>
                    </tr>
                </thead>
                <tbody>
                {% for prompt in prompts %}
                    <tr>
                        <th scope="row" class="border-start border-black border-1">{{ prompt.id }}</th>
                        <td class="border-start border-black border-1">{{ prompt.prompt }}</td>
                        <td class="border-start border-black border-1">{{ prompt.name }}</td>
                        <td class="border-start border-black border-1">{{ prompt.categorised_questions }}</td>
                        <td class="border-start border-black border-1">{{ prompt.correct_questions }}</td>
                        <td class="border-start border-black border-1"><a target="_blank" href="http://127.0.0.1:5000/prompts/prompt_details/{{ prompt.id }}">Details</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="row">
                <a href="{{ url_for('add_prompt') }}"><button type="button" class="btn btn-light btn-primary" >Nieuw prompt toevoegen</button></a>
            </div>
        </div>
    </div>
{% endblock %}