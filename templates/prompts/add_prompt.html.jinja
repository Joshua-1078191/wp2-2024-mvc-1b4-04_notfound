{% extends "layout.html.jinja" %}
{% block head %}
    <meta charset="UTF-8">
    <link rel="shortcut icon" type="image/png" sizes="32x32" href="{{ url_for('static', filename='img/favicon-32x32.png') }}">
    <link rel="shortcut icon" type="image/png" sizes="16x16" href="{{ url_for('static', filename='img/favicon-16x16.png') }}">
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='fonts/font-awesome.min.css') }}">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic&amp;display=swap">
    <link rel="stylesheet" href="../../static/css/prompt_screens_stylesheet.css">
{% endblock %}
{% block title %}
    add prompt screen
{% endblock %}
{% block content %}
    <div class="container">
        <h1>Nieuwe prompt</h1>
        <div class="row align-items-start">
            <div class="col">
                <div class="row">
                    <div class="d-flex justify-content-start">
                        <form method="post" action="#">
                            <label for="prompt-title" class="form-label"></label>
                            <div class="col-5 input-group input-group-lg ">
                                <span class="input-group-text border-0" id="prompt-title">Titel</span>
                                <input type="text" id="prompt-title" class="form-control border border-2 border-black border-opacity-75 rounded ms-5" name="prompt-title" maxlength="1000" required autocomplete="off" placeholder="Titel van de prompt">
                            </div>
                            <label for="prompt-text" class="form-label"></label>

                            <!--input field position is not right. Needs to be fixed.-->

                            <div class="col-5 input-group input-group-lg">
                                <span class="input-group-text border-0" id="prompt-text">Prompt</span>
                                <input type="text" id="prompt-text" class="form-control border border-2 border-black border-opacity-75 rounded ms-5" name="prompt-text" maxlength="1000" required autocomplete="off" placeholder="Wat moet de prompt doen?">
                            </div>
                            <input type="submit" class="m-3 col-1 btn btn-outline-primary" value="Opslaan" name="Opslaan" id="submit-button">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}