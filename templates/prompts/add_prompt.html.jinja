{% extends "layout.html.jinja" %}
{% block head %}
    <meta charset="UTF-8">
    <link rel="shortcut icon" type="image/png" sizes="32x32" href="{{ url_for('static', filename='img/favicon-32x32.png') }}">
    <link rel="shortcut icon" type="image/png" sizes="16x16" href="{{ url_for('static', filename='img/favicon-16x16.png') }}">
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='fonts/font-awesome.min.css') }}">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic&amp;display=swap">
    <link rel="stylesheet" href="../../static/css/prompt_screens_stylesheet.css">
{% endblock %}
{% block title %}
    Prompt Toevoegen
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Nieuwe Prompt Toevoegen</h1>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <form method="POST" action="{{ url_for('add_prompt') }}">
                    <div class="mb-3">
                        <label for="user_id" class="form-label">Redacteur</label>
                        <select class="form-select" id="user_id" name="user_id" required>
                            <option value="">Selecteer een redacteur</option>
                            {% for user in users %}
                                <option value="{{ user.id }}">{{ user.name }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="prompt_name" class="form-label">Naam</label>
                        <input type="text" class="form-control" id="prompt_name" name="prompt_name" required>
                    </div>

                    <div class="mb-3">
                        <label for="prompt" class="form-label">Prompt</label>
                        <textarea class="form-control" id="prompt" name="prompt" rows="3" required></textarea>
                    </div>

                    <div class="mb-3">
                        <a href="{{ url_for('prompts_view') }}" class="btn btn-secondary">Annuleren</a>
                        <button type="submit" class="btn btn-primary">Opslaan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}