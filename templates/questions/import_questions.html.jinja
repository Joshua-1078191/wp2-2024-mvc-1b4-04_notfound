{% extends "layout.html.jinja" %}
{% block title %}Vragen Importeren{% endblock %}
{% block content %}
    <div class="container d-flex justify-content-center align-items-center">
        <form class="col-6 d-flex flex-column justify-content-center p-4 rounded-5 bg-white shadow-sm" method="post" enctype="multipart/form-data">
            <h2 class="fw-light mb-4">Vragen importeren</h2>
            <!-- Bestand selecteren (*.json) -->
            <div class="mb-3">
                <label for="formFile" class="form-label">Importeer vragen vanaf je computer</label>
                <input name="jsonFile" required type="file" class="form-control" accept="application/json" id="formFile">
            </div>
            {% include 'handle_flashes.html.jinja' %}

            <!-- Importeer knop -->
            <input type="submit" class="btn btn-primary" value="Importeer">
        </form>
    </div>
{% endblock %}