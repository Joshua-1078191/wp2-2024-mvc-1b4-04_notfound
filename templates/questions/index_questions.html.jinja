{% extends "layout.html.jinja" %}
{% block title %}Vragen Importeren{% endblock %}
{% block content %}
    <div class="mt-5 mb-5 d-flex justify-content-center align-items-baseline">
        <div class="col-sm-10">
            <!-- Common -->
            <h1 class="fw-light">Vragen indexeren naar taxonomie</h1>
            <h2 class="h5">Vraag:</h2>
            <div class="overflow-auto">
                <p>{{ question.question }}</p>
            </div>

            <h2 class="h5">Antwoord:</h2>
            <div class="overflow-auto">
                <p>{{ question.answer }}</p>
            </div>

            <table class="table table-bordered table-hover">
                <tr>
                    <th scope="row" class="col-2">Vak</th>
                    <td>{{ question.subject }}</td>
                </tr>
                <tr>
                    <th scope="row" class="col-2">Onderwijsniveau</th>
                    <td>{{ question.education }}</td>
                </tr>
                <tr>
                    <th scope="row" class="col-2">Leerjaar</th>
                    <td>{{ question.grade }}</td>
                </tr>
            </table>
            {% block index_content %}{% endblock %}
        </div>
    </div>
{% endblock %}