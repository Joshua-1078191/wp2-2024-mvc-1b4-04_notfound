{% extends "layout.html.jinja" %}
{% block title %}Gegevens redacteur wijzigen{% endblock %}
{% block content %}

<div class="container py-4 py-xl-5">
    <div class="position-relative">
        <div class="position-absolute top-0 start-0"></div>
        <h2>Gegevens redacteur wijzigen</h2>
    </div>
</div>
<form>
    <div class="row mb-3">
        <label for="name" class="col-sm-2 col-form-label">Naam</label>
        <div class="col-sm-10">
            <input type="text" id="name" value="{{ editor.name }}" name="name">
        </div>
    </div>
    <div class="row mb-1">
        <label for="email" class="col-sm-2 col-form-label">Email/login</label>
        <div class="col-sm-10">
            <input type="email" id="email" value="{{ editor.email }}" name="email">
        </div>
    </div>
    <div class="row mb-1">
        <label for="password" class="col-sm-2 col-form-label">Wachtwoord</label>
        <div class="col-sm-10">
            <input type="password" id="password" name="password">
        </div>
    </div>
    <div class="row mb-1">
        <div class="form-check form-switch">
            <label class="form-check-label" for="flexSwitchCheckDefault">Is admin?</label>
            <input class="form-check-input" type="checkbox" role="switch"  {% if editor.isAdmin %} checked {% endif %}  id="flexSwitchCheckDefault">
        </div>
    </div>
    <div class="row mb-1">
        <!--<div class="d-grid gap-2 d-md-flex justify-content-md-end">-->
        <input class="btn btn-primary me-md-2" type="submit" value="Opslaan">
        <input class="btn btn-primary" type="submit" value="Verwijder">
    </div>
</form>
{% endblock %}